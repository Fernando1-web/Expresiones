<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expresiones.MainPage">
    <ScrollView>
    <StackLayout Margin="20,20,20,20" Spacing="1">
        <Image Source="expresiones.png" HeightRequest="200" WidthRequest="300" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
        <Entry x:Name="EntryA" VerticalOptions="CenterAndExpand" Placeholder="Ingrese el digito A" Grid.Row="0"/>
        <Entry x:Name="EntryB" VerticalOptions="CenterAndExpand" Placeholder="Ingrese el digito B" Grid.Row="1"/>
            <Entry x:Name="Respuesta" VerticalOptions="CenterAndExpand" Placeholder="Resultado"  Grid.Row="2" />
        </Grid>
        <Button x:Name="BtnOperate" Clicked="BtnOperate_Clicked" Text="Calcular" TextColor="Black" HeightRequest="60"/>
        <Label Text="Gracias profe :3"/>
    </StackLayout>
    </ScrollView>

</ContentPage>
